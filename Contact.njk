{% extends "_common.njk" %}

{% block content %}

<!--  - - - - contact form -->
<div class="container contactForm">
  <form>
    <fieldset>
      <legend>Contact us! We'd love to hear from you</legend>
      <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
          <input type="text" readonly="" class="form-control-plaintext" id="staticEmail" value="InnoContact@Innovation.io" data-kwimpalastatus="alive" data-kwimpalaid="1550220434740-3">
        </div>
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="email" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Enter email" data-kwimpalastatus="alive" data-kwimpalaid="1550220434740-4">
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      </div>
      <div class="form-group">
        <label for="getInTouch">Why would you like to get in touch?</label>
        <select class="form-control" id="getInTouch">
          <option>Business Opportunity</option>
          <option>Apply for a position</option>
          <option>Ask about our business</option>
          <option>Reclamation/Quality control</option>
          <option>Facturation</option>
        </select>
      </div>
      <div class="form-group">
        <label for="MessageField">Enter your message!</label>
        <textarea class="form-control" id="MessageField" rows="5"></textarea>
      </div>
      <div class="form-group">
        <label for="exampleInputFile">File input</label>
        <input type="file" class="form-control-file" id="exampleInputFile" aria-describedby="fileHelp">
        <small id="fileHelp" class="form-text text-muted">Input here any relevent file you'd like us to take a look at ! Portfolio, Curriculum, anything...</small>
      </div>
      <fieldset class="form-group">
      </fieldset>
      <fieldset class="form-group">
        <legend>Agreement</legend>
        <div class="form-check">
          <label class="form-check-label">
            <input class="form-check-input" type="checkbox">
            By filling this form and checking this box, I explicitely allow any staff member @ Innovation to contact me, using the mail adress provided above.
          </label>
        </div>
      </fieldset>
      <button id="submitButton" type="button" class="btn btn-primary" data-toggle="modal" data-target=".bd-example-modal-sm">Submit</button>
    </fieldset>
  </form>
</div>


<div class="parallax padding mt-5">
</div>

<div class="container usefulInfoContainer mt-5">
  <div class="row justify-content-around">
    <div id="address col-12 col md-6">
      <h3>Our adress</h3>
        <ul>
          <li>Innovation.inc</li>
          <li>Surreal Street, 476/B</li>
          <li>PO - 98002</li>
          <li>Portland, Oregon</li>
          <li>US of America</li>
        </ul>
    </div>
    <div id="businessHours col-12 col md-6">
      <h3>Open from tuesday to friday, 9 to 5</h3>
      <p>Hours may vary, checkout our twitter @IOnovation for any relevant info!</p>
      <h3>On a nature hike from saturday to monday</h3>
      <p>Don't hesitate to follow our Instagram Page! @InstaInno</p>
    </div>
  </div>
</div>
<div class="container text-center mt-5 mb-3">
  <h4>Location</h4>
  <div class="googleMap">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2798.0234270319443!2d-122.60477859938501!3d45.46933199261106!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x54950aaaf37f659b%3A0x189352082fc184a6!2s5999-5701+SE+Henderson+St%2C+Portland%2C+OR+97206%2C+USA!5e0!3m2!1sen!2sbe!4v1550225192715"
      frameborder="0" style="border:0" allowfullscreen></iframe>
  </div>
</div>


<!-- Small modal -->
<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-sm">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Thank you!</h5>
      </div>
      <div class="modal-body">
        <p class="text-info">Thank you for your message! We'll get back to you as soon as possible</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
{% endblock %}
